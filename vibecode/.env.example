# ===========================================
# oneshotcoding Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Database Configuration (PostgreSQL)
# -------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=oneshotcoding
DB_USER=oneshotcoding
DB_PASSWORD=oneshotcoding
DATABASE_URL=postgresql://oneshotcoding:oneshotcoding@localhost:5432/oneshotcoding

# -------------------------------------------
# MinIO / S3 Configuration
# -------------------------------------------
# For local development with MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=oneshotcoding
S3_SECRET_KEY=oneshotcoding123
S3_BUCKET=oneshotcoding-shots
S3_REGION=us-east-1

# For production with AWS S3
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key
# S3_BUCKET=your-production-bucket
# S3_REGION=us-east-1

# -------------------------------------------
# GitHub OAuth Configuration
# -------------------------------------------
# Create OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# -------------------------------------------
# JWT Configuration
# -------------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# -------------------------------------------
# Application Configuration
# -------------------------------------------
NODE_ENV=development
API_PORT=3001
WEB_PORT=3000
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -------------------------------------------
# File Upload Configuration
# -------------------------------------------
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
