{
  "name": "oneshotcoding",
  "version": "1.0.0",
  "private": true,
  "description": "OneShotCoding - A social network for developers to share their daily builds",
  "keywords": [
    "social-network",
    "developers",
    "coding",
    "typescript",
    "monorepo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oneshotcoding/oneshotcoding.git"
  },
  "license": "MIT",
  "author": "OneShotCoding Team",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @oneshotcoding/api migrate",
    "db:seed": "pnpm --filter @oneshotcoding/api seed",
    "db:reset": "pnpm --filter @oneshotcoding/api db:reset",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "prepare": "node .husky/install.mjs || true",
    "test": "turbo test",
    "test:api": "pnpm --filter @oneshotcoding/api test",
    "test:web": "pnpm --filter @oneshotcoding/web test",
    "test:security": "pnpm --filter @oneshotcoding/api test:security",
    "test:coverage": "turbo test:coverage",
    "test:watch": "turbo test:watch",
    "e2e": "pnpm --filter @oneshotcoding/e2e test",
    "e2e:ui": "pnpm --filter @oneshotcoding/e2e test:ui",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
